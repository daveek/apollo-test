{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "overrides": [
    {
      "files": ["**/*.{spec,test}.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["**/bin/*.js"],
      "rules": {
        "no-console": 0
      }
    }
  ]
}
